extends ../base

block content 
  div#formWrapper
    form.editUserForm(enctype="multipart/form-data", method="POST")
      h3 Edit Profile
      label(for="avatar") avatar
      input(id="avatar", type="file", name="avatar")
      label(for="email") Email
      input(type="text", name="email", value=loggedInUser.email, id="email")
      label(for="name") Name
      input(type="text", name="name", value=loggedInUser.name, id="name")
      input(type="submit", value="Edit")
      if !loggedInUser.socialOnly 
        a(href="change-password") Change Password  &rarr;